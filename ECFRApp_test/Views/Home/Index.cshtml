@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4">ECFR Data Integration Application</h1>
        <p class="lead">Fetch, store, and visualize data from the Electronic Code of Federal Regulations API</p>
    </div>

    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">📊 Dashboard</h5>
                    <p class="card-text">View agency statistics, document counts, and visual charts. Fetch latest data from ECFR.gov.</p>
                    <a href="@Url.Action("Index", "Dashboard")" class="btn btn-primary">Go to Dashboard</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">🔍 Data Viewer</h5>
                    <p class="card-text">Browse all stored documents, search and filter data, view complete snapshot information.</p>
                    <a href="@Url.Action("Index", "DataViewer")" class="btn btn-primary">View Data</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">📈 Historical Changes</h5>
                    <p class="card-text">Track document count changes over time with interactive timeline charts and filtering.</p>
                    <a href="@Url.Action("Historical", "Dashboard")" class="btn btn-primary">View History</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">🔐 Checksums</h5>
                    <p class="card-text">Verify data integrity with SHA-256 checksums for each agency's documents.</p>
                    <a href="@Url.Action("Checksums", "Dashboard")" class="btn btn-primary">View Checksums</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">🔧 Debug Tools</h5>
                    <p class="card-text">Inspect raw API responses, parsed data, and troubleshoot data fetching issues.</p>
                    <a href="@Url.Action("Index", "Debug")" class="btn btn-outline-secondary">Debug View</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">🔌 API Test</h5>
                    <p class="card-text">Test all API endpoints that read data from stored JSON files.</p>
                    <a href="@Url.Action("ApiTest", "Home")" class="btn btn-outline-secondary">Test APIs</a>
                </div>
            </div>
        </div>
    </div>

    <div class="card bg-light">
        <div class="card-body">
            <h5 class="card-title">Available API Endpoints</h5>
            <p class="card-text">These endpoints read data from the stored JSON files:</p>
            <ul>
                <li><code>GET /api/ECFRData/snapshot</code> - Complete data snapshot from ecfr_current.json</li>
                <li><code>GET /api/ECFRData/statistics</code> - Agency statistics from ecfr_current.json</li>
                <li><code>GET /api/ECFRData/historical</code> - Historical changes from ecfr_historical.json</li>
            </ul>
            <p class="mb-0"><small class="text-muted">Data is stored in: <strong>Data/ecfr_current.json</strong> and <strong>Data/ecfr_historical.json</strong></small></p>
        </div>
    </div>

    <div class="text-center mt-4">
        <p class="text-muted">
            <small>Learn more about <a href="https://www.ecfr.gov/api-documentation" target="_blank">ECFR API Documentation</a></small>
        </p>
    </div>
</div>
