@model ECFRApp_test.Models.ECFRDataSnapshot
@{
    ViewData["Title"] = "Data Viewer - Current Snapshot";
}

<div class="container mt-4">
    <h1 class="mb-4">ECFR Data Viewer</h1>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger" role="alert">
            <strong>Error:</strong> @ViewBag.Error
        </div>
    }

    @if (Model == null)
    {
        <div class="alert alert-info">
            <h5>No Data Available</h5>
            <p>No data has been fetched yet. Please:</p>
            <ol>
                <li>Go to the <a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
                <li>Click "Fetch Latest Data" to retrieve data from ECFR.gov</li>
                <li>Return to this page to view the stored data</li>
            </ol>
        </div>
    }
    else
    {
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Snapshot Overview</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <strong>Fetched At:</strong><br/>
                                @Model.FetchedAt.ToLocalTime().ToString("f")
                            </div>
                            <div class="col-md-4">
                                <strong>Total Documents:</strong><br/>
                                <span class="badge bg-primary fs-5">@Model.Documents.Count</span>
                            </div>
                            <div class="col-md-4">
                                <strong>Total Agencies:</strong><br/>
                                <span class="badge bg-success fs-5">@Model.Statistics.Count</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Agency Statistics</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.Statistics.Any())
                        {
                            <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                                <table class="table table-sm table-striped">
                                    <thead class="sticky-top bg-white">
                                        <tr>
                                            <th>#</th>
                                            <th>Agency Name</th>
                                            <th>Count</th>
                                            <th>Checksum</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.Statistics.Count; i++)
                                        {
                                            var stat = Model.Statistics[i];
                                            <tr>
                                                <td>@(i + 1)</td>
                                                <td>@stat.AgencyName</td>
                                                <td><span class="badge bg-info">@stat.DocumentCount</span></td>
                                                <td><code style="font-size: 0.7em;">@stat.Checksum.Substring(0, 16)...</code></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No statistics available.</p>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Document Type Breakdown</h5>
                    </div>
                    <div class="card-body">
                        @{
                            var typeGroups = Model.Documents.GroupBy(d => d.Type ?? "Unknown").OrderByDescending(g => g.Count()).ToList();
                        }
                        @if (typeGroups.Any())
                        {
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Type</th>
                                        <th>Count</th>
                                        <th>Percentage</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var group in typeGroups)
                                    {
                                        var percentage = (group.Count() * 100.0 / Model.Documents.Count).ToString("F1");
                                        <tr>
                                            <td>@group.Key</td>
                                            <td><span class="badge bg-secondary">@group.Count()</span></td>
                                            <td>
                                                <div class="progress" style="height: 20px;">
                                                    <div class="progress-bar" role="progressbar" style="width: @percentage%" aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100">
                                                        @percentage%
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">All Documents (@Model.Documents.Count)</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <input type="text" id="searchInput" class="form-control" placeholder="Search documents by title, agency, type...">
                        </div>

                        <div class="table-responsive" style="max-height: 500px; overflow-y: auto;">
                            <table class="table table-striped table-hover table-sm" id="documentsTable">
                                <thead class="sticky-top bg-white">
                                    <tr>
                                        <th style="width: 50px;">#</th>
                                        <th>Title</th>
                                        <th>Agency</th>
                                        <th>Type</th>
                                        <th>Citation</th>
                                        <th>Date</th>
                                        <th>URL</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.Documents.Count; i++)
                                    {
                                        var doc = Model.Documents[i];
                                        <tr>
                                            <td>@(i + 1)</td>
                                            <td>@(doc.Title ?? "-")</td>
                                            <td>@(doc.AgencyName ?? "Unknown")</td>
                                            <td><span class="badge bg-secondary">@(doc.Type ?? "-")</span></td>
                                            <td>@(doc.Citation ?? "-")</td>
                                            <td>@(doc.PublicationDate?.ToString("d") ?? "-")</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(doc.Url))
                                                {
                                                    <a href="@doc.Url" target="_blank" class="btn btn-sm btn-outline-primary">View</a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        @if (Model.Documents.All(d => string.IsNullOrEmpty(d.Title) && d.AgencyName == "Unknown"))
                        {
                            <div class="alert alert-warning mt-3">
                                <strong>Data Quality Notice:</strong> All documents show minimal information. This suggests the API field parsing may need adjustment. 
                                Visit the <a href="@Url.Action("Index", "Debug")">Debug page</a> to inspect the raw API response.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">API Endpoints</h5>
                    </div>
                    <div class="card-body">
                        <p>You can access the stored data directly via these API endpoints:</p>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Endpoint</th>
                                    <th>Description</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><code>GET /api/ECFRData/snapshot</code></td>
                                    <td>Get complete current snapshot</td>
                                    <td><a href="/api/ECFRData/snapshot" target="_blank" class="btn btn-sm btn-primary">Try it</a></td>
                                </tr>
                                <tr>
                                    <td><code>GET /api/ECFRData/statistics</code></td>
                                    <td>Get agency statistics</td>
                                    <td><a href="/api/ECFRData/statistics" target="_blank" class="btn btn-sm btn-primary">Try it</a></td>
                                </tr>
                                <tr>
                                    <td><code>GET /api/ECFRData/historical</code></td>
                                    <td>Get historical changes</td>
                                    <td><a href="/api/ECFRData/historical" target="_blank" class="btn btn-sm btn-primary">Try it</a></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="mt-3">
        <a href="@Url.Action("Index", "Dashboard")" class="btn btn-secondary">Back to Dashboard</a>
    </div>
</div>

@section Scripts {
    <script>
        // Search functionality
        document.getElementById('searchInput')?.addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            const rows = document.querySelectorAll('#documentsTable tbody tr');
            
            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });
    </script>
}
